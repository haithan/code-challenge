{
  "name": "code-challenge",
  "version": "1.0.0",
  "description": "Code challenge solutions with TypeScript. Quick start: npm i && npm run dev:problem5",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev:problem5",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist && find src -name '*.js' -delete",
    "dev:problem4": "ts-node src/problem4/sum_to_n.ts",
    "dev:problem5": "nodemon",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:create": "typeorm-ts-node-commonjs schema:sync -d src/problem5/config/database.ts",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "setup": "npm install && npm run build",

    "postinstall": "echo 'Quick start: npm run dev:problem5\n API docs will be at: http://localhost:3000/api-docs\n'"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
